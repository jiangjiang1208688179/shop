<!--index.wxml-->
<view class='navBar'>
  <navigator wx:for="{{navTop}}" wx:key="{{navTop.id}}">
    {{item.navbarName}}
  </navigator>
</view>
<swiper autoplay="true" indicator-dots="true">
  <block wx:for="{{banner}}" wx:key="{{banner.id}}">
    <swiper-item>
      <image src="{{item.imgUrl}}" class="slide-image" style='width:750rpx;height:500rpx;'/>
    </swiper-item>
  </block>
</swiper>
<view class='homeMenus'>
  <navigator style='width:155rpx;height:250rpx;border:1px solid #ccc' wx:for="{{homeMenus}}" wx:key="{{homeMenus.id}}" class='homeMenusItem' >
    <view><image src='{{item.imgUrl}}' style='width:150rpx;height:150rpx; border:2px solid #ccc'></image></view>
    <view>{{item.menuName}}</view>
  </navigator>
</view>

<view class='sellGoods'>
  <view class='goodTitle'>新品特卖</view>
  <view style='height:500rpx; border:2rpx solid #e6e6e6'><image></image></view>

  <view class='specialGoods'>
    <view class='goodTitle'>福利专场</view>
    <view class='textColor'>每天早10晚8准时上新</view>
    <view class='goodItem'>
      <view wx:for="{{getHotGoodsList}}" style='border:2rpx solid #e6e6e6;width:340rpx;height:450rpx;display:block'><image src='{{item.list.imgUrl}}' style='width:200rpx;height:350rpx;'></image></view>
    </view>
  </view>
</view>