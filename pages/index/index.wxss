.firstPage{
  font-size: 28rpx;
}
.navBar{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 32rpx;
}
.homeMenus,.goodItem{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: left;
  padding: 8rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.homeMenusItem{
  display: flex;
  flex-direction: column;
  padding: 12rpx;
  text-align: center;
  width:155rpx;
  height:190rpx;
}
.sellGoods{
  padding: 20rpx;
}
.goodTitle{
  font-size: 36rpx;
  padding-bottom: 5rpx;
  margin-top:15rpx;
}
.newGoodsItem{
  margin-top:20rpx;
  margin-bottom: 20rpx; 
}
.newGoodsItemName{
  font-weight: 500;
}
.newGoodsItemActive{
  font-size: 25rpx;
  color: #6A5ACD;
}
.textColor{
  color: #8a8a8a;
  font-size: 28rpx;
}
.goodItem{
  justify-content: space-between;
  padding: 0rpx;
}
.goodItemName{
  font-size: 24rpx;
  height: 60rpx;
  padding: 5rpx;
  width: 100%;
  overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.specialGoodsInfor{
  display: flex;
  justify-content: space-between;
}
.price{
  margin-top:10rpx;
}
 .price view{
  display:inline-block;
} 
.nowPrice{
  color: #d4237a;
   /* font-weight 参数最多为900 */
  font-weight: 900;
  font-size: 32rpx;
}
.oriPrice{
  text-decoration: line-through;
  margin-left: 10rpx;
  color:#8a8a8a;
  font-size: 28rpx;
}
.discount{
  background: #000000;
  color: white;
}